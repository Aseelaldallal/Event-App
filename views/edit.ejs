<% include partials/header %>



<div class="container">
    
    
    <form action="/events/<%=event._id%>?_method=PUT" method="POST">
        
          <h1>Edit event</h1>
        
          <div class="form-group">
            <label for="eventName">Name</label>
            <input name="event[name]" type="text" class="form-control" id="eventName" value="<%=event.name%>">
          </div>
          
          <div class="form-group">
            <label for="date">Date</label>
            <input id="date" name="event[date]" type="date" >
            <script> document.getElementById('date').value = "<%= event.date.toISOString().substring(0,10)%>"</script>
          </div>
          
          <div class="form-group">
            <label for="location">Location</label>
            <input name="event[location]" type="text" class="form-control" id="location"  value="<%=event.location%>">
          </div>
          
          <div class="form-group">
            <label for="image">Image URL</label>
            <input name="event[image]" type="text" class="form-control" id="image"  value="<%=event.image%>">
          </div>
          
        <div class="form-group">
            <label for="description">Description</label>
            <textarea name="event[description]" class="form-control" id="description" rows="5"><%=event.description%></textarea>
         </div>
          
         <button type="submit" class="btn btn-primary">Submit</button>
         
    </form>
    
    

</div> <!-- Container End -->




<% include partials/footer %>